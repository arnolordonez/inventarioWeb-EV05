@model InventarioWEB.Models.Referencia

@{
    ViewData["Title"] = "Eliminar Referencia";
}

<!-- Bootstrap 5 y Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-5">
    <h2 class="text-danger fw-bold mb-4">@ViewData["Title"]</h2>

    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        ¿Está seguro que desea eliminar esta referencia?
    </div>

    <div class="card border-danger shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Model.DescripReferencia</dd>

                <dt class="col-sm-3">Género</dt>
                <dd class="col-sm-9">@Model.Genero?.DescripGenero</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Eliminar" method="post" class="mt-4">
        <input type="hidden" asp-for="ID_Referencias" />

        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Eliminar
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Cancelar
        </a>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
