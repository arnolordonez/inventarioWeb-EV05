@model InventarioWEB.Models.Referencia

@{
    ViewData["Title"] = "Eliminar Referencia";
}

<!-- Bootstrap 5 y Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-4">
    <h2 class="text-danger fw-bold mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.DescripReferencia</h5>
            <p class="card-text"><strong>Género:</strong> @Model.Genero.DescripGenero</p>

            <p class="card-text"><strong>Telas Asociadas:</strong></p>
            @if (Model.ReferenciasTelas != null && Model.ReferenciasTelas.Any())
            {
                    <ul>
                    @foreach (var rt in Model.ReferenciasTelas)
                    {
                                <li>@rt.Tela.DescripTela</li>
                    }
                    </ul>
            }
            else
            {
                    <p class="text-muted">No hay telas asociadas.</p>
            }
        </div>
    </div>

    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle-fill"></i>
        ¿Está seguro que desea eliminar esta referencia? Esta acción no se puede deshacer.
    </div>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="ID_Referencias" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> Eliminar
        </button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Referencia")">
            <i class="bi bi-arrow-left-circle"></i> Cancelar
        </a>
    </form>
</div>
