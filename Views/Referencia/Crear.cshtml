@model InventarioWEB.Models.Referencia

@{
    ViewData["Title"] = "Crear Nueva Referencia";
}

<!-- Bootstrap 5 y Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="DescripReferencia" class="form-label">Descripción de la Referencia</label>
            <input asp-for="DescripReferencia" class="form-control" />
            <span asp-validation-for="DescripReferencia" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ID_Genero" class="form-label">Género</label>
            <select asp-for="ID_Genero" class="form-select"
                    asp-items="ViewBag.Generos">
                <option value="">-- Seleccione un género --</option>
            </select>
            <span asp-validation-for="ID_Genero" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Telas Asociadas</label>
            <select asp-for="ReferenciasTelas" class="form-select" multiple
                    asp-items="ViewBag.Telas">
            </select>
            <small class="form-text text-muted">Mantenga Ctrl o Cmd para seleccionar múltiples telas.</small>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Crear
        </button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Referencia")">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </form>
</div>

<!-- Validación de Bootstrap -->
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
