@model IEnumerable<InventarioWEB.Models.Referencia>

@{
    ViewData["Title"] = "Listado de Referencias";
}

<!-- Bootstrap 5 y Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-4">@ViewData["Title"]</h2>

    <div class="mb-3">
        <a class="btn btn-success" href="@Url.Action("Create", "Referencia")">
            <i class="bi bi-plus-circle"></i> Crear Nueva Referencia
        </a>
    </div>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Descripción</th>
                <th>Género</th>
                <th>Telas Asociadas</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                            <tr>
                                <td>@item.ID_Referencias</td>
                                <td>@item.DescripReferencia</td>
                                <td>@item.Genero.DescripGenero</td>
                                <td>
                            @if (item.ReferenciasTelas != null && item.ReferenciasTelas.Any())
                            {
                                @string.Join(", ", item.ReferenciasTelas.Select(rt => rt.Tela.DescripTela))
                            }
                            else
                            {
                                            <span class="text-muted">Sin telas</span>
                            }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="@Url.Action("Details", "Referencia", new { id = item.ID_Referencias })">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>
                                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "Referencia", new { id = item.ID_Referencias })">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Referencia", new { id = item.ID_Referencias })">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                }
            }
            else
            {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No hay referencias registradas.</td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
