@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var usuarioId = HttpContextAccessor.HttpContext.Session.GetString("UsuarioID");
    bool sesionActiva = !string.IsNullOrEmpty(usuarioId);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventarioWEB</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            overflow-x: hidden;
        }
        .navbar {
            background-color: #1E3A8A;
            color: white;
            padding: 12px 15px;
            z-index: 1050;
        }
        .menu-toggle {
            font-size: 1.8rem;
            cursor: pointer;
            color: white;
        }
        .navbar-brand {
            color: white;
            font-weight: bold;
            font-size: 1.25rem;
        }
        .sidebar {
            position: fixed;
            top: 0;
            left: -260px;
            width: 240px;
            height: 100vh;
            background-color: #1E3A8A;
            color: white;
            padding-top: 70px;
            transition: left 0.3s ease;
            z-index: 1040;
        }
        .sidebar.active {
            left: 0;
        }
        .sidebar a {
            color: white;
            display: block;
            padding: 12px 20px;
            text-decoration: none;
            border-radius: 6px;
            margin: 4px 10px;
            font-size: 0.95rem;
            transition: background 0.3s;
        }
        .sidebar a:hover {
            background-color: #0d214c;
        }
        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            z-index: 1035;
            display: none;
        }
        .overlay-active {
            display: block;
        }
        .content {
            padding: 80px 20px 70px;
            transition: margin-left 0.3s;
            min-height: 100vh;
        }
        .content.shift {
            margin-left: 240px;
        }
        footer {
            background-color: #1E3A8A;
            color: white;
            text-align: center;
            padding: 10px;
            width: 100%;
            bottom: 0;
            position: fixed;
            z-index: 1030;
            font-size: 0.85rem;
        }
    </style>
</head>

<body>

    @if (sesionActiva)
    {
            <!-- NAVBAR SUPERIOR -->
            <nav class="navbar fixed-top d-flex justify-content-between align-items-center shadow-sm">
                <span class="menu-toggle" id="menu-toggle"><i class="bi bi-list"></i></span>
                <span class="navbar-brand">InventarioWEB</span>
            </nav>

            <!-- Overlay -->
            <div id="overlay"></div>

            <!-- MENÚ LATERAL -->
            <div class="sidebar" id="sidebar">
                <h6 class="text-center mb-3 fw-bold">Menú Principal</h6>

                <a asp-controller="Auto" asp-action="Dashboard"><i class="bi bi-house me-2"></i>Inicio</a>
                <a asp-controller="Productos" asp-action="Index"><i class="bi bi-box-seam me-2"></i>Productos</a>
                <a asp-controller="Clientes" asp-action="Index"><i class="bi bi-people me-2"></i>Clientes</a>
                <a asp-controller="Ventas" asp-action="Index"><i class="bi bi-cart-check me-2"></i>Ventas</a>
                <a asp-controller="Abonos" asp-action="Index"><i class="bi bi-cash-coin me-2"></i>Abonos</a>
                <a asp-controller="Reportes" asp-action="Index"><i class="bi bi-bar-chart-line me-2"></i>Reportes</a>
                <a asp-controller="Catalogos" asp-action="Index"><i class="bi bi-collection me-2"></i>Catálogos</a>

                <a asp-controller="Auto" asp-action="Logout" class="mt-4" style="background-color:#dc3545;">
                    <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                </a>
            </div>
    }

    <!-- CONTENIDO PRINCIPAL -->
    <div class="content @(sesionActiva ? "" : "p-3")" id="content">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    @if (sesionActiva)
    {
            <footer>
                &copy; @DateTime.Now.Year InventarioWEB - Todos los derechos reservados.
            </footer>
    }

    @if (sesionActiva)
    {
            <script>
                const toggle = document.getElementById("menu-toggle");
                const sidebar = document.getElementById("sidebar");
                const content = document.getElementById("content");
                const overlay = document.getElementById("overlay");

                function toggleMenu() {
                    sidebar.classList.toggle("active");
                    content.classList.toggle("shift");
                    overlay.classList.toggle("overlay-active");
                }

                if(toggle && sidebar && overlay){
                    toggle.addEventListener("click", toggleMenu);
                    overlay.addEventListener("click", toggleMenu);
                }
            </script>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>


