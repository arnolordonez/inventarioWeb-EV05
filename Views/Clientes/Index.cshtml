@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<InventarioWEB.Models.Cliente>

@{
    ViewData["Title"] = "Clientes - Indomable";
    var nombreUsuario = ViewBag.NombreUsuario ?? "Usuario";
    bool soloEliminados = ViewBag.SoloEliminados ?? false;
}

<style>
    .table thead th {
        background-color: #1E3A8A;
        color: white;
        vertical-align: middle;
        text-align: center;
    }

    .table tbody td {
        vertical-align: middle;
    }

    .btn-agregar {
        background-color: #1E3A8A;
        color: white;
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 0.9rem;
    }

    .btn-agregar:hover {
        background-color: #0d214c;
    }

    .vip-label {
        color: #b30000;
        font-weight: bold;
    }

    .cliente-normal {
        color: #008000;
        font-weight: bold;
    }

    .disabled-button {
        pointer-events: none;
        opacity: 0.6;
    }
</style>

<div class="container mt-4">

    <h5 class="fw-bold text-primary text-center mb-3">Gestión de Clientes</h5>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted mb-0">Bienvenido, <strong>@nombreUsuario</strong></p>

        <a class="btn btn-agregar" asp-controller="Clientes" asp-action="Create">
            <i class="bi bi-person-plus me-1"></i> Nuevo Cliente
        </a>
    </div>

    @if (!Model.Any())
    {
            <div class="alert alert-warning text-center">
                <i class="bi bi-exclamation-triangle me-1"></i>
                No hay clientes registrados.
            </div>
    }
    else
    {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre Completo</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Tipo Cliente</th>
                            <th>VIP</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                    @foreach (var cliente in Model)
                    {
                                <tr>
                                    <td>@cliente.ID_Cliente</td>
                                    <td>@cliente.Nombre @cliente.Apellido</td>
                                    <td>@cliente.Correo</td>
                                    <td>@cliente.Telefono</td>
                                    <td>@cliente.TipoCliente</td>
                                    <td>
                                @if (cliente.VIP)
                                {
                                                <span class="vip-label">SI</span>
                                }
                                else
                                {
                                                <span class="cliente-normal">NO</span>
                                }
                                    </td>
                                    <td>@(cliente.Activo ? "SI" : "NO")</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">

                                            <a asp-action="Details"
                                               asp-route-id="@cliente.ID_Cliente"
                                               class="btn btn-sm btn-outline-secondary"
                                               title="Detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <a asp-action="Edit"
                                               asp-route-id="@cliente.ID_Cliente"
                                               class="btn btn-sm btn-outline-primary @(cliente.Activo ? "" : "disabled-button")"
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                    @if (cliente.Activo)
                                    {
                                                    <form asp-action="Delete"
                                                          asp-route-id="@cliente.ID_Cliente"
                                                          method="post"
                                                          onsubmit="return confirm('¿Está seguro de eliminar este cliente?')">
                                                        <button type="submit"
                                                                class="btn btn-sm btn-outline-danger"
                                                                title="Eliminar">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                    }
                                    else
                                    {
                                                    <form asp-action="Restore"
                                                          asp-route-id="@cliente.ID_Cliente"
                                                          method="post"
                                                          onsubmit="return confirm('¿Está seguro de restaurar este cliente?')">
                                                        <button type="submit"
                                                                class="btn btn-sm btn-outline-success"
                                                                title="Restaurar">
                                                            <i class="bi bi-arrow-counterclockwise"></i>
                                                        </button>
                                                    </form>
                                    }

                                        </div>
                                    </td>
                                </tr>
                    }
                    </tbody>
                </table>
            </div>

          
            <!-- Paginación -->
            <div class="d-flex justify-content-center mt-3">
                    @Html.PagedListPager(
                                Model,
                                page => Url.Action("Index", new { page, soloEliminados })
                            )
            </div>

    }

    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle me-1"></i>
        En este módulo podrás registrar nuevos clientes, editar información o eliminar/restaurar registros existentes.
    </div>

</div>
