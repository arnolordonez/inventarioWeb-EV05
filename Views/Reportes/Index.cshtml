@{
    ViewData["Title"] = "Reportes - Indomable";
    var nombreUsuario = ViewBag.NombreUsuario ?? "Usuario";
}

<!-- Bootstrap 5 e íconos -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background-color: #f8fafc;
        color: #333;
    }

    /* Encabezado superior */
    .header {
        background-color: #1E3A8A;
        color: white;
        padding: 15px;
        text-align: center;
        position: sticky;
        top: 0;
        z-index: 1000;
        border-radius: 0 0 10px 10px;
    }

    .menu-btn {
        position: absolute;
        left: 20px;
        font-size: 1.8rem;
        cursor: pointer;
    }

    /* Menú lateral */
    .sidebar {
        height: 100%;
        width: 0;
        position: fixed;
        top: 0;
        left: 0;
        background-color: #1E3A8A;
        overflow-x: hidden;
        transition: 0.3s;
        z-index: 1200;
        padding-top: 60px;
    }

    .sidebar.open {
        width: 230px;
    }

    .sidebar-header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        background-color: #1E3A8A;
        color: white;
        text-align: center;
        padding: 15px 0;
        font-weight: bold;
    }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 20px;
        font-size: 24px;
        cursor: pointer;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin-top: 80px;
    }

    .sidebar-menu li {
        padding: 10px 20px;
    }

    .sidebar-menu a {
        color: white;
        text-decoration: none;
        display: block;
        font-size: 16px;
        transition: background 0.2s;
        border-radius: 8px;
    }

    .sidebar-menu a:hover, 
    .sidebar-menu .active a {
        background-color: #2563EB;
    }

    /* Contenedor principal */
    .main-container {
        transition: margin-left 0.3s ease;
        padding: 0;
    }

    .content {
        padding: 20px;
        margin-top: 10px;
    }

    .card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 20px;
    }

    .report-section {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-top: 20px;
    }

    .report-card {
        background-color: #EEF2FF;
        padding: 15px;
        border-radius: 10px;
        text-align: left;
    }

    .report-card h3 {
        color: #1E3A8A;
        margin-bottom: 5px;
        font-size: 1.1rem;
    }

    .btn {
        background-color: #1E3A8A;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 8px;
        margin-top: 10px;
        cursor: pointer;
        font-size: 14px;
        width: 100%;
    }

    .btn:hover {
        background-color: #2563EB;
    }

    .footer {
        background-color: #1E3A8A;
        color: white;
        text-align: center;
        padding: 10px;
        margin-top: 30px;
        font-size: 0.9rem;
        border-radius: 10px 10px 0 0;
    }

    /* ✅ Diseño responsive móvil */
    @@media (max-width: 768px) {
        .sidebar.open {
            width: 200px;
        }

        .report-card h3 {
            font-size: 1rem;
        }

        .btn {
            font-size: 13px;
        }

        .card {
            padding: 15px;
        }
    }
</style>

<!-- Menú lateral -->
<div id="sidebar" class="sidebar">
    <div class="sidebar-header">
        INDOMABLE
        <span class="close-btn" onclick="toggleSidebar()">×</span>
    </div>
    <ul class="sidebar-menu">
        <li><a href="/Auto/Dashboard"><i class="bi bi-house me-2"></i>Inicio</a></li>
        <li><a href="/Productos/Index"><i class="bi bi-box-seam me-2"></i>Productos</a></li>
        <li><a href="/Clientes/Index"><i class="bi bi-people me-2"></i>Clientes</a></li>
        <li><a href="/Ventas/Index"><i class="bi bi-cart-check me-2"></i>Ventas</a></li>
        <li><a href="/Abonos/Index"><i class="bi bi-cash-coin me-2"></i>Abonos</a></li>
        <li class="active"><a href="/Reportes/Index"><i class="bi bi-bar-chart-line me-2"></i>Reportes</a></li>
        <li><a href="/Auto/Login"><i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión</a></li>
    </ul>
</div>

<!-- Contenedor principal -->
<div class="main-container">
    <!-- Encabezado -->
    <header class="header">
        <span class="menu-btn" onclick="toggleSidebar()">☰</span>
        <h1 class="h5 m-0">Reportes del Sistema</h1>
        <small>Bienvenido, <strong>@nombreUsuario</strong></small>
    </header>

    <!-- Contenido principal -->
    <div class="content">
        <div class="card">
            <div class="card-body text-center">
                <h2 class="fw-bold text-primary">📊 Panel de Reportes</h2>
                <p>Consulta el estado general de tus productos, ventas y abonos registrados.</p>

                <div class="report-section">
                    <div class="report-card">
                        <h3>📈 Ventas del Mes</h3>
                        <p>Total de ventas registradas durante el mes actual.</p>
                        <button class="btn">Ver Detalle</button>
                    </div>

                    <div class="report-card">
                        <h3>💰 Abonos Recibidos</h3>
                        <p>Resumen de abonos aplicados por los clientes.</p>
                        <button class="btn">Ver Reporte</button>
                    </div>

                    <div class="report-card">
                        <h3>📦 Stock de Productos</h3>
                        <p>Verifica los productos con bajo inventario.</p>
                        <button class="btn">Ver Inventario</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pie de página -->
    <footer class="footer">
        © @DateTime.Now.Year INDOMABLE · Textilera de Ropa Interior
    </footer>
</div>

<!-- Script -->
<script>
    function toggleSidebar() {
        const sidebar = document.getElementById("sidebar");
        sidebar.classList.toggle("open");
    }
</script>
