@model InventarioWEB.Models.DTO.LoginRequest
@{
    ViewData["Title"] = "Login";
    // ViewBag.Correos contendrá los últimos 5 correos más recientes
}

<!-- Enlazar Bootstrap 5 desde CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="min-vh-100 d-flex flex-column justify-content-center align-items-center" style="background-color:#1E3A8A; color:white;">

    <!-- Título grande -->
    <h1 class="display-3 text-center mb-4">Indomable</h1>

    <!-- Navegación superior -->
    <div class="mb-5 d-flex gap-2">
        <a asp-action="Login" class="btn btn-light text-primary">Login</a>
        <a asp-action="Register" class="btn btn-light text-primary">Registro</a>
        <a asp-action="ForgotPassword" class="btn btn-light text-primary">Recuperar contraseña</a>
    </div>

    <!-- Card del formulario -->
    <div class="card p-4 shadow-sm" style="width: 100%; max-width: 450px; background-color:white; color:#000; border-radius: 15px;">
        <h2 class="text-center text-primary mb-4">Iniciar sesión</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <!-- Validación general -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Correo con lista de últimos 5 correos -->
            <div class="mb-3">
                <label asp-for="Correo" class="form-label fw-bold"></label>
                <input asp-for="Correo" class="form-control" placeholder="Seleccione su correo" list="listaCorreos" autocomplete="off" />
                <datalist id="listaCorreos">
                    @if (ViewBag.Correos != null)
                    {
                        foreach (var correo in ViewBag.Correos)
                        {
                                    <option value="@correo"></option>
                        }
                    }
                </datalist>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <!-- Contraseña -->
            <div class="mb-4">
                <label asp-for="Contrasena" class="form-label fw-bold"></label>
                <input asp-for="Contrasena" type="password" class="form-control" placeholder="Ingrese su contraseña" autocomplete="new-password" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <!-- Botón ingresar -->
            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill">Ingresar</button>
            </div>

            <!-- Opciones extra -->
            <div class="d-flex flex-column gap-2">
                <a asp-action="Register" class="btn btn-warning rounded-pill">¿No tienes cuenta? Regístrate</a>
                <a asp-action="ForgotPassword" class="btn btn-danger rounded-pill">¿Olvidaste tu contraseña?</a>
            </div>

            <!-- Mensaje desde ViewBag -->
            @if (ViewBag.Mensaje != null)
            {
                    <div class="alert alert-danger mt-3 text-center rounded">@ViewBag.Mensaje</div>
            }
        </form>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
