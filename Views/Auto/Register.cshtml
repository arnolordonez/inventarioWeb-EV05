@model InventarioWEB.Models.DTO.RegisterRequest
@{
    ViewData["Title"] = "Registro Usuarios";
}

<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="min-vh-100 d-flex flex-column justify-content-center align-items-center" style="background-color:#f8f9fa;">

    <div class="card p-5 shadow-sm" style="width:100%; max-width:500px;">

        <h1 class="text-center text-primary mb-4">Registro de Usuarios</h1>

        <form asp-action="Register" method="post">

            <!-- Validación general -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Nombres -->
            <div class="mb-3">
                <label asp-for="Nombres" class="form-label fw-bold"></label>
                <input asp-for="Nombres" class="form-control" placeholder="Ingrese sus nombres" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <!-- Apellidos -->
            <div class="mb-3">
                <label asp-for="Apellidos" class="form-label fw-bold"></label>
                <input asp-for="Apellidos" class="form-control" placeholder="Ingrese sus apellidos" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <!-- Cédula -->
            <div class="mb-3">
                <label asp-for="Cedula" class="form-label fw-bold"></label>
                <input asp-for="Cedula" class="form-control" placeholder="Ingrese su cédula" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>

            <!-- Fecha de nacimiento -->
            <div class="mb-3">
                <label asp-for="FechaNac" class="form-label fw-bold"></label>
                <input asp-for="FechaNac" type="date" class="form-control" />
                <span asp-validation-for="FechaNac" class="text-danger"></span>
            </div>

            <!-- Correo -->
            <div class="mb-3">
                <label asp-for="Correo" class="form-label fw-bold"></label>
                <input asp-for="Correo" class="form-control" placeholder="Ingrese su correo" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <!-- Contraseña -->
            <div class="mb-4">
                <label asp-for="Contrasena" class="form-label fw-bold"></label>
                <input asp-for="Contrasena" type="password" class="form-control" placeholder="Ingrese su contraseña" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary flex-fill me-2">Registrar</button>
                <a href="/Auto/Login" class="btn btn-secondary flex-fill ms-2">Cancelar</a>
            </div>

            <!-- Mensaje desde el controlador -->
            @if (ViewBag.Mensaje != null)
            {
                    <div class="alert alert-info mt-3 text-center">@ViewBag.Mensaje</div>
            }
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
