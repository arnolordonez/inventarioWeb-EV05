@{
    ViewData["Title"] = "Menú Principal - Inventario Ventas";
    var nombreUsuario = ViewBag.NombreUsuario ?? "Usuario";
}

<!-- Enlazar Bootstrap 5 desde CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    .sidebar {
        width: 220px;
        height: 100vh;
        background-color: #1E3A8A;
        color: white;
        flex-shrink: 0;
    }

    .sidebar a {
        color: white;
        text-decoration: none;
        display: block;
        padding: 12px 20px;
        margin-bottom: 5px;
        border-radius: 5px;
        transition: 0.3s;
    }

    .sidebar a:hover {
        background-color: #0d214c;
    }

    .topbar {
        background-color: #1E3A8A;
        color: white;
        padding: 15px;
    }

    .card-inventario {
        margin-top: 20px;
        cursor: pointer;
        transition: transform 0.2s;
    }

    .card-inventario:hover {
        transform: translateY(-5px);
    }

    .footer {
        background-color: #1E3A8A;
        color: white;
        text-align: center;
        padding: 10px;
        margin-top: auto;
    }
</style>

<div class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3">
        <h3 class="text-center mb-3">Inventario Ventas</h3>
        <p class="text-center mb-4">Bienvenido, <strong>@nombreUsuario</strong></p>

        <a href="/Productos/Index"><i class="bi bi-box-seam me-2"></i>Productos</a>
        <a href="/Categorias/Index"><i class="bi bi-tags me-2"></i>Categorías</a>
        <a href="/Clientes/Index"><i class="bi bi-people me-2"></i>Clientes</a>
        <a href="/Ventas/Index"><i class="bi bi-cart-check me-2"></i>Ventas</a>
        <a href="/Reportes/Index"><i class="bi bi-bar-chart-line me-2"></i>Reportes</a>

        <!-- Cerrar sesión corregido -->
        <a href="/Auto/Login"><i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión</a>
    </div>

    <!-- Contenido principal -->
    <div class="flex-fill d-flex flex-column">
        <!-- Barra superior -->
        <div class="topbar d-flex justify-content-between align-items-center">
            <h4>Panel Principal</h4>
            <span>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
        </div>

        <!-- Panel central -->
        <div class="container-fluid p-4">
            <div class="row g-3">
                <!-- Tarjetas rápidas -->
                <div class="col-md-3">
                    <div class="card shadow-sm card-inventario text-center">
                        <div class="card-body">
                            <h5 class="card-title">Total Productos</h5>
                            <p class="card-text display-6">150</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card shadow-sm card-inventario text-center">
                        <div class="card-body">
                            <h5 class="card-title">Ventas Hoy</h5>
                            <p class="card-text display-6">25</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card shadow-sm card-inventario text-center">
                        <div class="card-body">
                            <h5 class="card-title">Clientes Registrados</h5>
                            <p class="card-text display-6">80</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card shadow-sm card-inventario text-center">
                        <div class="card-body">
                            <h5 class="card-title">Stock Bajo</h5>
                            <p class="card-text display-6">12</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel de bienvenida -->
            <div class="card shadow-sm mt-4 p-4">
                <h5>Bienvenido al sistema de Inventario de Ventas de la empresa textilera</h5>
                <p>Desde aquí puedes gestionar productos, clientes, ventas y generar reportes. Utiliza el menú lateral para acceder a cada sección.</p>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            &copy; @DateTime.Now.Year Empresa Textilera. Todos los derechos reservados.
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
