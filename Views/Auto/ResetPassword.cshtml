@model InventarioWEB.Models.DTO.ResetPasswordRequest
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="min-vh-100 d-flex flex-column justify-content-center align-items-center" style="background-color:#1E3A8A; color:white;">

    <h1 class="display-4 text-center mb-4">Restablecer Contraseña</h1>

    <div class="card p-4 shadow-sm" style="width: 100%; max-width: 450px; background-color:white; color:#000;">
        <h2 class="text-center text-primary mb-4">Ingrese su nueva contraseña</h2>

        <form asp-action="ResetPassword" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="Token" type="hidden" />

            <div class="mb-3">
                <label asp-for="NuevaContrasena" class="form-label fw-bold"></label>
                <input asp-for="NuevaContrasena" type="password" class="form-control" placeholder="Ingrese su nueva contraseña" />
                <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmarContrasena" class="form-label fw-bold"></label>
                <input asp-for="ConfirmarContrasena" type="password" class="form-control" placeholder="Confirme su nueva contraseña" />
                <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Restablecer Contraseña</button>
            </div>

            @if (ViewBag.Mensaje != null)
            {
                    <div class="alert alert-info mt-3 text-center" role="alert">
                    @ViewBag.Mensaje
                    </div>
            }
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Login" class="btn btn-light text-primary">Volver al Login</a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
