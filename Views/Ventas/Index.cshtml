@{
    ViewData["Title"] = "Ventas - Indomable";
    var nombreUsuario = ViewBag.NombreUsuario ?? "Usuario";
}

<!-- Enlazar Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    /* Sidebar lateral */
    .sidebar {
        width: 220px;
        height: 100vh;
        background-color: #1E3A8A;
        color: white;
        position: fixed;
        left: -220px;
        top: 0;
        transition: left 0.3s ease;
        z-index: 1000;
        padding-top: 20px;
    }

    .sidebar.active {
        left: 0;
    }

    .sidebar a {
        color: white;
        text-decoration: none;
        display: block;
        padding: 12px 20px;
        margin-bottom: 5px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .sidebar a:hover {
        background-color: #0d214c;
    }

    /* Contenido principal */
    .content {
        margin-left: 0;
        transition: margin-left 0.3s;
        padding: 20px;
    }

    .content.active {
        margin-left: 220px;
    }

    /* Barra superior */
    .topbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #1E3A8A;
        color: white;
        padding: 10px 20px;
        position: sticky;
        top: 0;
        z-index: 900;
    }

    /* Botón hamburguesa */
    .menu-toggle {
        background: none;
        border: none;
        color: white;
        font-size: 1.8rem;
        margin-right: 10px;
    }

    /* Tarjetas de venta */
    .card-venta {
        border-left: 5px solid #1E3A8A;
        border-radius: 10px;
        transition: transform 0.2s;
    }

    .card-venta:hover {
        transform: scale(1.02);
    }

    .venta-total {
        font-size: 1.4rem;
        font-weight: bold;
        color: #1E3A8A;
    }

    .footer {
        background-color: #1E3A8A;
        color: white;
        text-align: center;
        padding: 10px;
        margin-top: 30px;
        border-radius: 0 0 10px 10px;
    }

        <style>
        @@media (max-width: 768px) {
            .card-venta {
                border-left: none;
                border-top: 4px solid #1E3A8A;
            }
        }
        </style>

    
        .topbar h5 {
            font-size: 1rem;
        }

        .venta-total {
            font-size: 1.2rem;
        }
    }
</style>

<!-- Sidebar -->
<div class="sidebar" id="sidebarMenu">
    <h4 class="text-center mb-4">Indomable</h4>
    <p class="text-center">Bienvenido, <strong>@nombreUsuario</strong></p>
    <hr>
    <a href="/Auto/Dashboard"><i class="bi bi-house me-2"></i>Inicio</a>
    <a href="/Productos/Index"><i class="bi bi-box-seam me-2"></i>Productos</a>
    <a href="/Clientes/Index"><i class="bi bi-people me-2"></i>Clientes</a>
    <a href="/Ventas/Index" class="bg-light text-dark"><i class="bi bi-cart-check me-2"></i>Ventas</a>
    <a href="/Abonos/Index"><i class="bi bi-cash-coin me-2"></i>Abonos</a>
    <a href="/Reportes/Index"><i class="bi bi-bar-chart-line me-2"></i>Reportes</a>
    <a href="/Catalogos/Index"><i class="bi bi-collection me-2"></i>Catálogos</a>
    <a href="/Auto/Login"><i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión</a>
</div>

<!-- Contenido principal -->
<div class="content" id="mainContent">
    <!-- Barra superior -->
    <div class="topbar">
        <div class="d-flex align-items-center">
            <button class="menu-toggle" id="menuBtn"><i class="bi bi-list"></i></button>
            <h5 class="m-0">Registro de Ventas</h5>
        </div>
        <span>@DateTime.Now.ToString("dd/MM/yyyy")</span>
    </div>

    <!-- Panel de ventas -->
    <div class="container-fluid mt-4">
        <h6 class="text-secondary mb-3">Resumen de Ventas Recientes</h6>

        <div class="row g-3">
            <!-- Venta 1 -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm card-venta p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Cliente: Ana Torres</h6>
                            <small class="text-muted">Producto: Blusa Algodón</small><br>
                            <small class="text-muted">Fecha: 06/10/2025</small>
                        </div>
                        <span class="venta-total">$45.000</span>
                    </div>
                </div>
            </div>

            <!-- Venta 2 -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm card-venta p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Cliente: Carlos Ruiz</h6>
                            <small class="text-muted">Producto: Boxer Hombre</small><br>
                            <small class="text-muted">Fecha: 05/10/2025</small>
                        </div>
                        <span class="venta-total">$30.000</span>
                    </div>
                </div>
            </div>

            <!-- Venta 3 -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm card-venta p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Cliente: María Gómez</h6>
                            <small class="text-muted">Producto: Pijama Mujer</small><br>
                            <small class="text-muted">Fecha: 05/10/2025</small>
                        </div>
                        <span class="venta-total">$70.000</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Totales del día -->
        <div class="card mt-4 shadow-sm p-3 text-center">
            <h6 class="text-primary">Total Ventas del Día</h6>
            <p class="venta-total">$145.000</p>
        </div>

        <!-- Información adicional -->
        <div class="card mt-4 shadow-sm p-3">
            <h6>Información general</h6>
            <p>En este módulo podrás visualizar las ventas realizadas.  
            En la versión funcional se permitirá registrar nuevas ventas, consultar y filtrar resultados.</p>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        &copy; @DateTime.Now.Year Indomable Textil. Todos los derechos reservados.
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const menuBtn = document.getElementById("menuBtn");
    const sidebarMenu = document.getElementById("sidebarMenu");
    const mainContent = document.getElementById("mainContent");

    menuBtn.addEventListener("click", () => {
        sidebarMenu.classList.toggle("active");
        mainContent.classList.toggle("active");
    });
</script>
