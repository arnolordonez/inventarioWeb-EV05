@model IEnumerable<InventarioWEB.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
    Layout = "_Layout";  
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-primary fw-bold">
        📋 Lista General de Productos
    </h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Producto
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center shadow-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Color</th>
                            <th>Precio</th>
                            <th>IVA (%)</th>
                            <th>Stock</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var p in Model)
                    {
                        // Fila marcada si está inactivo o sin stock
                        var filaClase = (!p.Activo || p.Stock == 0) ? "table-danger" : "";

                            <tr class="@filaClase">
                                <td>@p.ID_Producto</td>
                                <td>@p.Nombre</td>

                                <!-- Color corregido -->
                                <td>@(p.Color?.Nombre ?? "Sin color")</td>                              

                                <td>@p.Precio.ToString("C")</td>
                                <td>@p.IVA_Porcentaje.ToString("0.##") %</td>
                                <td>@p.Stock</td>
                                <td>
                                @if (p.Activo)
                                {
                                            <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                            <span class="badge bg-secondary">Inactivo</span>
                                }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@p.ID_Producto" class="btn btn-sm btn-warning me-1 shadow-sm">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@p.ID_Producto" class="btn btn-sm btn-danger shadow-sm">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                    }
                    </tbody>
                </table>
            </div>
    }
    else
    {
            <div class="alert alert-info text-center mt-4 shadow-sm">
                <i class="bi bi-info-circle"></i> No hay productos registrados actualmente.
            </div>
    }
</div>
