@{
    ViewData["Title"] = ViewData["Title"] ?? "Categoría de Productos";
}

<!-- Bootstrap y Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .navbar {
        background-color: #1E3A8A;
        color: white;
        padding: 10px 15px;
    }

    .navbar .menu-toggle {
        font-size: 1.6rem;
        cursor: pointer;
        color: white;
    }

    .navbar .navbar-brand {
        color: white;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .sidebar {
        position: fixed;
        top: 0;
        left: -260px;
        width: 240px;
        height: 100%;
        background-color: #1E3A8A;
        color: white;
        padding-top: 70px;
        transition: left 0.3s ease;
        z-index: 1000;
    }

    .sidebar.active {
        left: 0;
    }

    .sidebar a {
        color: white;
        display: block;
        padding: 12px 20px;
        text-decoration: none;
        border-radius: 6px;
        margin: 4px 10px;
        transition: background 0.3s;
    }

    .sidebar a:hover {
        background-color: #0d214c;
    }

    .content {
        padding: 80px 15px 70px;
        transition: margin-left 0.3s;
    }

    .content.shift {
        margin-left: 240px;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        overflow: hidden;
        transition: transform 0.2s ease;
    }

    .card:hover {
        transform: scale(1.03);
    }

    .card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    footer {
        background-color: #1E3A8A;
        color: white;
        text-align: center;
        padding: 10px;
        position: fixed;
        bottom: 0;
        width: 100%;
        font-size: 0.85rem;
    }
</style>

<!-- Navbar superior -->
<nav class="navbar fixed-top d-flex justify-content-between align-items-center">
    <span class="menu-toggle" id="menu-toggle"><i class="bi bi-list"></i></span>
    <span class="navbar-brand">Indomable</span>
    <img src="~/Images/Productos.png" alt="Productos" width="35" height="35" class="rounded-circle" />
</nav>

<!-- Menú lateral -->
<div class="sidebar" id="sidebar">
    <h6 class="text-center mb-3">Menú Principal</h6>
    <a href="/Auto/Dashboard"><i class="bi bi-house me-2"></i>Inicio</a>
    <a href="/Productos/Index"><i class="bi bi-box-seam me-2"></i>Productos</a>
    <a href="/Clientes/Index"><i class="bi bi-people me-2"></i>Clientes</a>
    <a href="/Ventas/Index"><i class="bi bi-cart-check me-2"></i>Ventas</a>
    <a href="/Abonos/Index"><i class="bi bi-cash-coin me-2"></i>Abonos</a>
    <a href="/Reportes/Index"><i class="bi bi-bar-chart-line me-2"></i>Reportes</a>
    <a href="/Catalogos/Index"><i class="bi bi-collection me-2"></i>Catálogos</a>
    <a href="/Auto/Login"><i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión</a>
</div>

<!-- Contenido principal -->
<div class="content" id="content">
    <div class="container">
        <!-- Título -->
        <div class="text-center mb-4">
            <h4 class="fw-bold text-primary">@ViewData["Title"]</h4>
            <p class="text-muted">Explora los productos disponibles en esta categoría.</p>
        </div>

        <!-- Tarjetas de productos -->
        <div class="row g-3">
            <div class="col-6 col-md-4">
                <div class="card">
                    <img src="~/images/producto1.jpg" alt="Producto 1">
                    <div class="card-body p-2">
                        <h6 class="fw-bold mb-1">Boxer Clásico</h6>
                        <p class="text-muted small mb-1">Comodidad y estilo diario.</p>
                        <p class="fw-bold text-success mb-2">$25.000</p>
                        <button class="btn btn-sm btn-outline-primary w-100">Ver Detalles</button>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-4">
                <div class="card">
                    <img src="~/images/producto2.jpg" alt="Producto 2">
                    <div class="card-body p-2">
                        <h6 class="fw-bold mb-1">Camiseta Interior</h6>
                        <p class="text-muted small mb-1">Suavidad de algodón premium.</p>
                        <p class="fw-bold text-success mb-2">$30.000</p>
                        <button class="btn btn-sm btn-outline-primary w-100">Ver Detalles</button>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-4">
                <div class="card">
                    <img src="~/images/producto3.jpg" alt="Producto 3">
                    <div class="card-body p-2">
                        <h6 class="fw-bold mb-1">Pijama Ligera</h6>
                        <p class="text-muted small mb-1">Ideal para noches frescas.</p>
                        <p class="fw-bold text-success mb-2">$45.000</p>
                        <button class="btn btn-sm btn-outline-primary w-100">Ver Detalles</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Aviso temporal -->
        <div class="alert alert-info text-center mt-4">
            <i class="bi bi-tools"></i> En construcción: aquí se mostrará la lista dinámica de productos de 
            <strong>@ViewData["Title"]</strong>.
        </div>
    </div>
</div>

<footer>
    &copy; @DateTime.Now.Year Indomable - Empresa Textilera
</footer>

<!-- Script de menú -->
<script>
    const toggle = document.getElementById("menu-toggle");
    const sidebar = document.getElementById("sidebar");
    const content = document.getElementById("content");

    toggle.addEventListener("click", () => {
        sidebar.classList.toggle("active");
        content.classList.toggle("shift");
    });
</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
