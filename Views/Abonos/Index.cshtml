@{
    ViewData["Title"] = "Abonos - Indomable";
    var nombreUsuario = ViewBag.NombreUsuario ?? "Usuario";
}

<!-- Bootstrap 5 y Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
    }

    /* Sidebar lateral */
    .sidebar {
        width: 220px;
        height: 100vh;
        background-color: #1E3A8A;
        color: white;
        position: fixed;
        left: -220px;
        top: 0;
        transition: left 0.3s ease;
        z-index: 1000;
        padding-top: 20px;
    }

    .sidebar.active {
        left: 0;
    }

    .sidebar a {
        color: white;
        text-decoration: none;
        display: block;
        padding: 12px 20px;
        margin-bottom: 5px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .sidebar a:hover {
        background-color: #0d214c;
    }

    /* Contenido principal */
    .content {
        margin-left: 0;
        transition: margin-left 0.3s;
        padding: 20px;
    }

    .content.active {
        margin-left: 220px;
    }

    /* Barra superior */
    .topbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #1E3A8A;
        color: white;
        padding: 10px 20px;
        position: sticky;
        top: 0;
        z-index: 900;
        border-radius: 0 0 10px 10px;
    }

    /* Botón menú hamburguesa */
    .menu-toggle {
        background: none;
        border: none;
        color: white;
        font-size: 1.8rem;
        margin-right: 10px;
    }

    /* Tarjetas de abono */
    .card-abono {
        border-left: 5px solid #1E3A8A;
        border-radius: 10px;
        transition: transform 0.2s;
    }

    .card-abono:hover {
        transform: scale(1.02);
    }

    .monto-abono {
        font-size: 1.4rem;
        font-weight: bold;
        color: #1E3A8A;
    }

    /* Footer */
    .footer {
        background-color: #1E3A8A;
        color: white;
        text-align: center;
        padding: 10px;
        margin-top: 30px;
        border-radius: 0 0 10px 10px;
        font-size: 0.9rem;
    }

    /* Diseño móvil */
    @@media (max-width: 768px) {
        .sidebar {
            width: 200px;
        }

        .content.active {
            margin-left: 200px;
        }

        .topbar h5 {
            font-size: 1rem;
        }

        .monto-abono {
            font-size: 1.2rem;
        }
    }
</style>

<!-- Sidebar -->
<div class="sidebar" id="sidebarMenu">
    <h4 class="text-center mb-4 fw-bold">INDOMABLE</h4>
    <p class="text-center mb-3">Bienvenido, <strong>@nombreUsuario</strong></p>
    <hr class="bg-light" />
    <a href="/Auto/Dashboard"><i class="bi bi-house me-2"></i>Inicio</a>
    <a href="/Productos/Index"><i class="bi bi-box-seam me-2"></i>Productos</a>
    <a href="/Clientes/Index"><i class="bi bi-people me-2"></i>Clientes</a>
    <a href="/Ventas/Index"><i class="bi bi-cart-check me-2"></i>Ventas</a>
    <a href="/Abonos/Index" class="bg-light text-dark fw-bold"><i class="bi bi-cash-coin me-2"></i>Abonos</a>
    <a href="/Reportes/Index"><i class="bi bi-bar-chart-line me-2"></i>Reportes</a>
    <a href="/Auto/Login"><i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión</a>
</div>

<!-- Contenido principal -->
<div class="content" id="mainContent">
    <!-- Barra superior -->
    <div class="topbar">
        <div class="d-flex align-items-center">
            <button class="menu-toggle" id="menuBtn"><i class="bi bi-list"></i></button>
            <h5 class="m-0">Registro de Abonos</h5>
        </div>
        <span>@DateTime.Now.ToString("dd/MM/yyyy")</span>
    </div>

    <!-- Contenedor de abonos -->
    <div class="container-fluid mt-4">
        <h6 class="text-secondary mb-3">Últimos Abonos Registrados</h6>

        <div class="row g-3">
            <!-- Abono 1 -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm card-abono p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Cliente: Ana Torres</h6>
                            <small class="text-muted">Venta N° 1023</small><br>
                            <small class="text-muted">Fecha: 06/10/2025</small>
                        </div>
                        <span class="monto-abono">$25.000</span>
                    </div>
                </div>
            </div>

            <!-- Abono 2 -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm card-abono p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Cliente: Carlos Ruiz</h6>
                            <small class="text-muted">Venta N° 1020</small><br>
                            <small class="text-muted">Fecha: 05/10/2025</small>
                        </div>
                        <span class="monto-abono">$40.000</span>
                    </div>
                </div>
            </div>

            <!-- Abono 3 -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm card-abono p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Cliente: María Gómez</h6>
                            <small class="text-muted">Venta N° 1018</small><br>
                            <small class="text-muted">Fecha: 04/10/2025</small>
                        </div>
                        <span class="monto-abono">$35.000</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Totales -->
        <div class="card mt-4 shadow-sm p-3 text-center">
            <h6 class="text-primary">Total Abonado Hoy</h6>
            <p class="monto-abono">$100.000</p>
        </div>

        <!-- Información adicional -->
        <div class="card mt-4 shadow-sm p-3">
            <h6 class="fw-bold">Información general</h6>
            <p>En este módulo podrás visualizar los abonos realizados por los clientes.  
            En la versión funcional se permitirá registrar nuevos abonos, consultar por cliente y generar reportes automáticos.</p>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        &copy; @DateTime.Now.Year INDOMABLE · Textilera de Ropa Interior
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const menuBtn = document.getElementById("menuBtn");
    const sidebarMenu = document.getElementById("sidebarMenu");
    const mainContent = document.getElementById("mainContent");

    menuBtn.addEventListener("click", () => {
        sidebarMenu.classList.toggle("active");
        mainContent.classList.toggle("active");
    });
</script>
